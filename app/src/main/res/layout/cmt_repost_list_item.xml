<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/list_item_margin_horizontal"
    android:layout_marginRight="@dimen/list_item_margin_horizontal"
    android:layout_marginTop="@dimen/list_item_margin_vertical"
    android:layout_marginBottom="@dimen/list_item_margin_vertical"
    app:cardBackgroundColor="?attr/listItemRetweetedBackground"
    app:cardCornerRadius="@dimen/list_item_background_corner_radius">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/list_item_element_spacing"
        android:layout_marginVertical="@dimen/list_item_element_spacing"
        android:orientation="vertical"
        android:background="@drawable/list_item_retweeted_background">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/cmt_repost_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical">
                <com.example.jordoncheng.weiboclient_mvp.view.widget.StatusAvatarImageView
                    android:id="@+id/list_item_cmt_repost_avatar"
                    android:layout_width="@dimen/list_item_retweeted_avatar_height"
                    android:layout_height="@dimen/list_item_retweeted_avatar_height"
                    android:layout_marginRight="@dimen/list_item_retweeted_element_spacing"/>
                <TextView
                    android:id="@+id/list_item_cmt_repost_screen_name"
                    android:textSize="@dimen/list_item_screen_name_text_size"
                    android:textStyle="bold"
                    android:layout_height="@dimen/list_item_retweeted_avatar_height"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:textColor="?attr/listItemContentTextPrimary" />
            </LinearLayout>
        </RelativeLayout>
        <TextView android:id="@+id/item_cmt_repost_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_item_retweeted_element_spacing"
            android:layout_marginBottom="@dimen/list_item_retweeted_element_spacing_half"
            android:layout_gravity="center"
            android:textSize="@dimen/list_item_text_size"
            android:textColor="?attr/listItemContentTextPrimary"
            android:lineSpacingExtra="@dimen/list_item_text_spacing"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
