<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentLeft="true">
        <com.jordoncheng.smweibo.models.InteractIcon
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/list_item_element_spacing"
            android:layout_marginTop="@dimen/list_item_element_spacing"
            android:layout_marginRight="@dimen/list_item_element_spacing_half"
            android:layout_marginBottom="@dimen/list_item_element_spacing"
            android:src="@mipmap/ic_repost_grey600_18dp"/>
        <TextView
            android:id="@+id/line_list_item_repost_count_on_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/listItemContent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_toRightOf="@id/list_item_status_favorite">
        <com.jordoncheng.smweibo.models.InteractIcon
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/list_item_element_spacing"
            android:layout_marginTop="@dimen/list_item_element_spacing"
            android:layout_marginRight="@dimen/list_item_element_spacing_half"
            android:layout_marginBottom="@dimen/list_item_element_spacing"
            android:src="@mipmap/ic_share_grey600_18dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/list_item_status_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentRight="true">
        <com.jordoncheng.smweibo.models.InteractIcon
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/list_item_element_spacing"
            android:layout_marginTop="@dimen/list_item_element_spacing"
            android:layout_marginRight="@dimen/list_item_element_spacing_half"
            android:layout_marginBottom="@dimen/list_item_element_spacing"
            android:src="@mipmap/ic_attitudes_grey600_18dp" />
        <TextView
            android:id="@+id/line_list_item_attitudes_count_on_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/list_item_element_spacing"
            android:textColor="?attr/listItemContent" />
    </LinearLayout>

</RelativeLayout>
