<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/line_list_item_user_on_large"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.jordoncheng.smweibo.views.StatusAvatarImageView
        android:id="@+id/line_list_item_avatar_on_large"
        android:layout_width="@dimen/list_item_avatar_height"
        android:layout_height="@dimen/list_item_avatar_height"
        android:layout_marginEnd="@dimen/list_item_element_spacing_half" />
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/list_item_element_spacing_half">
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/line_list_item_screen_name_on_large"
                android:textSize="@dimen/list_item_screen_name_text_size"
                android:textStyle="bold"
                android:gravity="bottom"
                android:layout_height="@dimen/list_item_avatar_height_half"
                android:layout_width="wrap_content"
                android:textColor="?attr/listItemContentTextPrimary"
                tools:ignore="SpUsage" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/line_list_item_name_on_large"
                android:textSize="@dimen/list_item_name_text_size"
                android:layout_height="@dimen/list_item_avatar_height_half"
                android:layout_width="wrap_content"
                android:gravity="top"
                android:textColor="?attr/listItemContentTextPrimaryDark"
                tools:ignore="SpUsage" />
        </TableRow>

    </TableLayout>

</LinearLayout>