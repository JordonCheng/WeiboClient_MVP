<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/list_item_margin_horizontal"
    android:layout_marginRight="@dimen/list_item_margin_horizontal"
    android:layout_marginTop="@dimen/list_item_margin_vertical"
    android:layout_marginBottom="@dimen/list_item_margin_vertical"
    app:cardBackgroundColor="?attr/listItemBackground"
    app:cardCornerRadius="@dimen/list_item_background_corner_radius">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/input_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/list_item_element_spacing"
            android:textCursorDrawable="@null"
            android:textColor="?attr/listItemContentTextPrimary"
            android:hint="@string/edit_hint"
            android:background="@null"
            android:textSize="@dimen/list_item_text_size"
            android:textColorHint="?attr/listItemContent"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/list_item_element_spacing">
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/comment_button"
                android:layout_width="@dimen/list_item_avatar_height"
                android:layout_height="@dimen/list_item_avatar_height_half"
                android:layout_alignParentRight="true"
                android:text="@string/button_comment"
                android:textColor="?attr/listItemContent"
                android:background="@drawable/button_comment"/>
        </RelativeLayout>
    </android.support.v7.widget.LinearLayoutCompat>

</android.support.v7.widget.CardView>
